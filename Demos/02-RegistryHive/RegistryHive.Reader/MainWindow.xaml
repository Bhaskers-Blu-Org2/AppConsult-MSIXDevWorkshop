<Window x:Class="RegistryHive.Reader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="12">
        <TextBlock Text="Tool to check if the key HKLM/SOFTWARE/Contoso/ContosoExpenses/IsFirstRun exists"
                   TextWrapping="Wrap"
                   FontSize="24" />
        <Button Content="Read key" Click="OnReadKey" FontSize="24" Width="300" />
        <TextBlock x:Name="KeyStatus" FontSize="24" Margin="0, 12, 0, 0" />
    </StackPanel>
</Window>
